<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amb12u.treeheight.ImageProcessingActivity" >

    <org.opencv.android.JavaCameraView
        android:id="@+id/surface_view_java"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        opencv:camera_id="any"
        opencv:show_fps="true" />

    <org.opencv.android.NativeCameraView
        android:id="@+id/surface_view_native"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        opencv:camera_id="any"
        opencv:show_fps="true" />

    <Button
        android:id="@+id/buttonResetCapture"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonCaptureImage"
        android:layout_toStartOf="@+id/buttonCaptureImage"
        android:enabled="false"
        android:onClick="onClickResetCapture"
        android:text="@string/reset"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonCaptureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCaptureImage"
        android:text="@string/button_capture_image"
        android:textSize="14sp" />
    

    <Button
        android:id="@+id/buttonCalculateHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonCaptureImage"
        android:layout_toEndOf="@+id/buttonCaptureImage"
        android:enabled="false"
        android:onClick="onClickCalculateHeight"
        android:text="@string/button_calculate_height"
        android:textSize="14sp" />

</RelativeLayout>
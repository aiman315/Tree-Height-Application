<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewIpTreeA4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewNeedTreeA4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:text="For this approach, you need a picture of a tree with an A4 paper standing next to it" />

        <ImageView
            android:id="@+id/imageViewIpTreeA4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNeedTreeA4"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/empty"
            android:padding="10dp"
            android:src="@drawable/ip_tree_a4" />

        <TextView
            android:id="@+id/textViewIpWherePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewIpTreeA4"
            android:padding="10dp"
            android:text="Do you have that picture?" />

        <Button
            android:id="@+id/buttonGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewIpWherePhoto"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:text="Yes.\n In my gallery!" />
        
        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewIpWherePhoto"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:text="No.\n I will take one!" />
    </RelativeLayout>

</ScrollView>
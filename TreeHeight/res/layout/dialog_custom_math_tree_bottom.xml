<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewTreeTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true" >

        <TextView
            android:id="@+id/textViewTreeBottomInstruction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:text="@string/dialog_tree_bottom_text_view_tree_bottom_instruction_1"
            />

        <ImageView
            android:id="@+id/imageViewMathTreeBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTreeBottomInstruction1"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/empty"
            android:padding="10dp"
            android:src="@drawable/math_tree_bottom" />

        <TextView
            android:id="@+id/textViewBottomInstruction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewMathTreeBottom"
            android:padding="10dp"
            android:text="@string/dialog_tree_bottom_text_view_tree_bottom_instruction_2" />

        <ImageView
            android:id="@+id/imageViewSnapTreeBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewBottomInstruction2"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/empty"
            android:padding="10dp"
            android:src="@drawable/snap_bottom" />

        <Button
            android:id="@+id/buttonOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewSnapTreeBottom"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/ok" />
    </RelativeLayout>

</ScrollView>